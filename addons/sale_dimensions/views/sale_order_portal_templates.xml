<odoo>
    <template id="sale_order_portal_content_inherit" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//th[@id='product_qty_header']" position="after">
            <th class="text-end">Length</th>
            <th class="text-end">Width</th>
        </xpath>

        <xpath expr="//t[@name='product_line_row']/td[@id='quote_qty_td']" position="after">
            <td class="text-end">
                <span t-if="line.x_length > 0" t-field="line.x_length" />
            </td>
            <td class="text-end">
                <span t-if="line.x_width > 0" t-field="line.x_width" />
            </td>
        </xpath>
    </template>
</odoo>
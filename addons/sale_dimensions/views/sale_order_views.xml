<odoo>
    <data>
        <record id="view_order_form_inherit_dimensions" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.dimensions</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                    <field name="allow_variable_dimensions" invisible="1"/>
                    <field name="x_length" readonly="not allow_variable_dimensions" force_save="1"/>
                    <field name="x_width" readonly="not allow_variable_dimensions" force_save="1"/>
                    <field name="price_per_sqm" readonly="not allow_variable_dimensions" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                    <group>
                        <field name="allow_variable_dimensions" invisible="1"/>
                        <field name="x_length" readonly="not allow_variable_dimensions" force_save="1"/>
                        <field name="x_width" readonly="not allow_variable_dimensions" force_save="1"/>
                        <field name="price_per_sqm" readonly="not allow_variable_dimensions" force_save="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="product_template_form_view_inherit_dimensions" model="ir.ui.view">
            <field name="name">product.template.form.inherit.dimensions</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='optional_product_ids']" position="before">
                    <field name="allow_variable_dimensions"/>
                    <field name="price_per_sqm" invisible="not allow_variable_dimensions"/>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_list_inherit_dimensions" model="ir.ui.view">
            <field name="name">sale.order.list.view.inherit.dimensions</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_line_dimensions"/>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_tree_inherit_dimensions" model="ir.ui.view">
            <field name="name">sale.order.tree.view.inherit.dimensions</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_list_upload"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_line_dimensions"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
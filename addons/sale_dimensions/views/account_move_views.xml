<odoo>
    <data>
        <record id="view_move_form_inherit_dimensions" model="ir.ui.view">
            <field name="name">account.move.form.inherit.dimensions</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_id']" position="after">
                    <field name="allow_variable_dimensions" column_invisible="True"/>
                    <field name="x_length" readonly="not allow_variable_dimensions" force_save="1"/>
                    <field name="x_width" readonly="not allow_variable_dimensions" force_save="1"/>
                    <field name="price_per_sqm" readonly="not allow_variable_dimensions" force_save="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
